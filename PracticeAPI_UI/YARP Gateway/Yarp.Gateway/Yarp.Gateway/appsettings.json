{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "AllowedHosts": "*",
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:4200",
      "http://localhost:4100"
    ]
  },

  "Jwt": {
    "Audiences": "https://localhost:44304/",
    "Issuer": "https://localhost:44304/",
    "Key": "JWTAuthentication@777",
    "TokenExpireInMinutes": 20
  },

  "ReverseProxy": {
    "Routes": {
      "AuthenticationRoute": {
        "ClusterId": "User_Management",
        "CorsPolicy": "AllowAllHeaders",
        "Match": {
          "Path": "usermanagement/api/Home/AuthenticateUser"
        },
        "Transforms": [ { "PathPattern": "Home/AuthenticateUser" } ]
      },
      "UniqueCheckRoute": {
        "ClusterId": "User_Management",
        "CorsPolicy": "AllowAllHeaders",
        "Match": {
          "Path": "usermanagement/api/User/CheckUserNameIsUnique"
        },
        "Transforms": [ { "PathPattern": "User/CheckUserNameIsUnique" } ]
      },
      "CountryRoute": {
        "ClusterId": "User_Management",
        "CorsPolicy": "AllowAllHeaders",
        "Match": {
          "Path": "usermanagement/api/User/CountryList"
        },
        "Transforms": [ { "PathPattern": "User/CountryList" } ]
      },
      "StateRoute": {
        "ClusterId": "User_Management",
        "CorsPolicy": "AllowAllHeaders",
        "Match": {
          "Path": "usermanagement/api/User/StateByCountry"
        },
        "Transforms": [ { "PathPattern": "User/StateByCountry" } ]
      },
      "CityRoute": {
        "ClusterId": "User_Management",
        "CorsPolicy": "AllowAllHeaders",
        "Match": {
          "Path": "usermanagement/api/User/CityByState"
        },
        "Transforms": [ { "PathPattern": "User/CityByState" } ]
      },
      "UserManagementRoute": {
        "ClusterId": "User_Management",
        //"CorsPolicy": "AllowAllHeaders",
        //"Match": {
        //  "Path": "{**catch-all}"
        //},
        "Match": {
          "Path": "usermanagement/api/{**catch-all}"
        },
        "Transforms": [ { "PathPattern": "{**catch-all}" } ]
        //"AuthorizationPolicy": "AdminOrCustomerPolicy"
        //"AuthorizationPolicy": "Default" //For Default JWT Bearer
      },

      "FileManagementRoute": {
        "ClusterId": "File_Management",
        "Match": {
          "Path": "filemanagement/api/{**catch-all}"
        },
        "Transforms": [ { "PathPattern": "{**catch-all}" } ],
        "AuthorizationPolicy": "Default" //For Default JWT Bearer
      }
    },
    "Clusters": {
      "User_Management": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:44304/api/"
          }
        }
      },
      "File_Management": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:21539/api/"
          }
        }
      }
    }
  }
}
