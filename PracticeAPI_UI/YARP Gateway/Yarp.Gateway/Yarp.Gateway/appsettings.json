{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "AllowedHosts": "*",
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:4200",
      "http://localhost:4100"
    ]
  },

  "Jwt": {
    "Audiences": "https://localhost:44304/",
    "Issuer": "https://localhost:44304/",
    "Key": "JWTAuthentication@777",
    "TokenExpireInMinutes": 20
  },

  "ReverseProxy": {
    "Routes": {
      "UserManagementRoute": {
        "ClusterId": "User_Management",
        "Match": {
          "Path": "{**catch-all}"
        },
        //if want to hide orignal route, we can use belove way
        //"Match": {
        //  "Path": "/test/{**catch-all}"
        //},
        //"Transforms": [ { "PathPattern": "{**catch-all}" } ]
        //"AuthorizationPolicy": "AdminOrCustomerPolicy"
        "AuthorizationPolicy": "Default" //For Default JWT Bearer
      },
      "FileManagementRoute": {
        "ClusterId": "File_Management",
        "Match": {
          "Path": "{**catch-all}"
        },
        "AuthorizationPolicy": "Default" //For Default JWT Bearer
      }
    },
    "Clusters": {
      "User_Management": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:44304/api/"
          }
        }
      },
      "File_Management": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:21539/api/"
          }
        }
      }
    }
  }
}
